<h2>Изменить пароль</h2>

<div class="row">
  <div class="col-md-5 buffer-top">
    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
      <%= f.hidden_field :reset_password_token %>

      <div class="form-group">
        <%= f.label :password, "Новый пароль:" %>
        <% if @minimum_password_length %>
          <em>(минимум <%= @minimum_password_length %> символов)</em><br />
        <% end %>
        <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class: "form-control buffer-bottom" %>
      </div>

      <div class="form-group">
        <%= f.label :password_confirmation, "Подтвердить новый пароль" %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control buffer-bottom" %>
      </div>

      <div class="actions">
        <%= f.submit "Изменить мой пароль", class: "btn btn-primary" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>